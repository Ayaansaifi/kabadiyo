<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: prevent cleartext traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Domain specific configuration (Optional but recommended for API domains) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">kabadiyo.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Allow user certificates only in debug builds for testing -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
